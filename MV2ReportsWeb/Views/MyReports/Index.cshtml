@model IEnumerable<MV2ReportsWeb.Models.MyReports>

@{
    ViewBag.Title = "MyReports";
}

<h2>My Reports</h2>

<p>
    @Html.ActionLink("Scheduler", "Index", "Schedulers")
</p>
@using MV2ReportsWeb.Utils
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UUID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UUID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
            @if (item.Status == Enum.GetName(typeof(Statuses), Statuses.Finished))
            {
            <td>
                @Html.ActionLink("Download", "Download", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }) 
            </td>
            }
            else
            {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
            }
        </tr>
}

</table>
